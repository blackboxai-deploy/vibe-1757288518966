# BaddBeatz Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Flask Configuration
FLASK_SECRET_KEY=your-generated-secret-key-here
FLASK_ENV=production
PORT=8000
DB_PATH=data/app.db

# Content Limits
MAX_CONTENT_LENGTH=16777216

# Rate Limiting Configuration
RATE_LIMIT_STORAGE_URL=memory://
RATELIMIT_ENABLED=true

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key-here

# OAuth2 Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# OAuth2 Configuration - GitHub
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# OAuth2 Configuration - Discord
DISCORD_CLIENT_ID=your-discord-client-id-here
DISCORD_CLIENT_SECRET=your-discord-client-secret-here

# Security Configuration
AI_REQUEST_TIMEOUT=30
CSRF_TIME_LIMIT=3600

# Caching Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Self-Hosted Chat Configuration
# Local LLM Configuration (Ollama)
OLLAMA_URL=http://localhost:11434/api/generate
LLM_MODEL=llama3:8b-instruct

# Alternative LLM Models (uncomment to use)
# LLM_MODEL=mistral:7b-instruct
# LLM_MODEL=codellama:7b-instruct
# LLM_MODEL=neural-chat:7b

# RAG Store Configuration
RAG_STORE_DIR=rag_store
EMBEDDING_MODEL=BAAI/bge-m3

# Development/Testing (set to 'testing' for tests)
# FLASK_ENV=testing
# DB_PATH=:memory:
