# BaddBeatz Streaming App Configuration
# Copy this file to .env and fill in your actual values

# OBS Studio Configuration
OBS_PASSWORD=your_obs_websocket_password

# Streaming Platform Keys
TWITCH_STREAM_KEY=your_twitch_stream_key_here
YOUTUBE_STREAM_KEY=your_youtube_stream_key_here
FACEBOOK_STREAM_KEY=your_facebook_stream_key_here
TIKTOK_STREAM_KEY=your_tiktok_stream_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: Advanced Configuration
RTMP_SERVER_PORT=1935
WEBSOCKET_PORT=4444

# Audio Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_BITRATE=128
VIDEO_BITRATE=2500
VIDEO_RESOLUTION=1920x1080
VIDEO_FPS=30

# Platform-Specific Settings
TWITCH_RTMP_URL=rtmp://live.twitch.tv/live/
YOUTUBE_RTMP_URL=rtmp://a.rtmp.youtube.com/live2/
FACEBOOK_RTMP_URL=rtmps://live-api-s.facebook.com:443/rtmp/
TIKTOK_RTMP_URL=rtmp://push.tiktokcdn.com/live/

# DJ Equipment Integration
MIDI_DEVICE_NAME=Pioneer DDJ-SX2
AUDIO_INTERFACE=ASIO
BPM_DETECTION_ENABLED=true
TRACK_IDENTIFICATION_ENABLED=true

# Analytics and Monitoring
ANALYTICS_ENABLED=true
LOG_LEVEL=info
METRICS_PORT=9090
